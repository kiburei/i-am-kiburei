<p id="notice"><%= notice %></p>

<h1>Ids</h1>

<div class="row">
  <div class="col s6">
    <table>
      <thead>
        <tr>
          <th>First name</th>
          <th>Second name</th>
          <th>Sir name</th>
          <th>Other name</th>
          <th>Dob</th>
          <th>Bio</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @ids.each do |id| %>
          <tr>
            <td><%= id.first_name %></td>
            <td><%= id.second_name %></td>
            <td><%= id.sir_name %></td>
            <td><%= id.other_name %></td>
            <td><%= id.dob %></td>
            <td><%= id.bio %></td>
            <td><%= link_to 'Show', id %></td>
            <td><%= link_to 'Edit', edit_id_path(id) %></td>
            <td><%= link_to 'Destroy', id, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <div class="col s6">
    <%= image_tag('bear') %>
  </div>
</div>
<br>

<%= link_to 'New Id', new_id_path %>
